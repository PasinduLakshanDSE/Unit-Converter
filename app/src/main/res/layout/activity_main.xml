<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212E3E"
    android:scrollbarSize="10sp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="346dp"
        android:layout_height="74dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="28dp"
        android:text="Unit Converter"
        android:textAllCaps="true"
        android:textColor="#16C3D9"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/TxtType"
        android:layout_width="148dp"
        android:layout_height="62dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="34dp"
        android:background="#0878BF"
        android:scrollbarSize="10sp"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rgroup" />

    <EditText
        android:id="@+id/TxtValue"
        android:layout_width="345dp"
        android:layout_height="69dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="38dp"
        android:ems="10"
        android:hint="Enter Value"
        android:inputType="text"
        android:textColor="#F4F7F8"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtType2" />

    <ImageButton
        android:id="@+id/BtnConvert"
        android:layout_width="123dp"
        android:layout_height="100dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="166dp"
        android:backgroundTint="#5BB7F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtValue"
        app:srcCompat="@drawable/baseline_autorenew_24" />

    <TextView
        android:id="@+id/lblConvert"
        android:layout_width="125dp"
        android:layout_height="52dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="166dp"
        android:text="Convert"
        android:textAllCaps="false"
        android:textColor="#00BCD4"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnConvert" />

    <TextView
        android:id="@+id/LblValue"
        android:layout_width="339dp"
        android:layout_height="79dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="36dp"
        android:text="Value :"
        android:textColor="#00BCD4"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblConvert" />

    <Spinner
        android:id="@+id/TxtType2"
        android:layout_width="146dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="50dp"
        android:background="#0878BF"
        android:scrollbarSize="10sp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rgroup" />

    <RadioGroup
        android:id="@+id/Rgroup"
        android:layout_width="171dp"
        android:layout_height="139dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTitle">

        <RadioButton
            android:id="@+id/Rbtndistance"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textColor="#00BCD4"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/RbtnTemp"
            android:layout_width="159dp"
            android:layout_height="37dp"
            android:text="Temperature"
            android:textColor="#00BCD4"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/RbtnWeight"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textColor="#00BCD4"
            android:textSize="20sp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>